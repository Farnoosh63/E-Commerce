<div class="row">

  {{#each limitedItems as |item|}}
  <div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
      <img src={{item.imageItem}} alt="item.name" placeholder={{item.name}} style="width: 100px; height: 100px">
      <div class="caption">
        <h4 class="pull-right" style="font-size: 12px">{{item.price}}</h4>
        <h4><a href="#" style="font-size: 15px">{{item.name}}</a></h4>
        <p style="font-size: 12px">{{item.description}}.</p>
      </div>
      <div class="ratings">
        <p class="pull-right">15 reviews</p>
        <p>
          <span class="glyphicon glyphicon-star"></span>
          <span class="glyphicon glyphicon-star"></span>
          <span class="glyphicon glyphicon-star"></span>
          <span class="glyphicon glyphicon-star"></span>
          <span class="glyphicon glyphicon-star"></span>
        </p>
      </div>
    </div>
  </div>
  {{/each}}
</div>

<p style="margin-left:45%"><a {{action 'previous'}}> &lt;&lt; previous</a>&nbsp;&nbsp;&nbsp;<a {{action 'next'}}>next &gt;&gt; </a> </p>

