<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
<div class="container">
	<table id="cart" class="table table-hover table-condensed">
    				<thead>
						<tr>
							<th style="width:50%">Product</th>
							<th style="width:10%">Price</th>
							<th style="width:8%">Quantity</th>
							<th style="width:22%" class="text-center">Subtotal</th>
							<th style="width:10%"></th>
						</tr>
					</thead>
					<tbody>

            {{log shopping}}
            {{#each shopping.items as |item|}}
						<tr>
							<td data-th="Product">
								<div class="row">
									<div class="col-sm-2 hidden-xs"><img src={{item.imageItem}} alt="..." class="img-responsive"/></div>
									<div class="col-sm-10">
										<h4 class="nomargin">{{item.name}}</h4>
										<p>{{item.decription}}</p>
									</div>
								</div>
							</td>
							<td data-th="Price">${{item.price}}</td>
							<td data-th="Quantity">
								<input type="number" class="form-control text-center" value="1">
							</td>
							<td data-th="Subtotal" class="text-center">${{item.price}}</td>
							<td class="actions" data-th="">
								<a href="/shopping" type="button" class="btn btn-info btn-sm"><i class="fa fa-refresh"></i></a>
								<button {{action 'removeFromCart' item}} class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i></button>
							</td>
						</tr>
            {{/each}}
					</tbody>
					<tfoot>
						<tr class="visible-xs">
							<td class="text-center"><strong>Total {{item.price}}</strong></td>
						</tr>
						<tr>
							<td>{{#link-to 'index'}} <div class="btn btn-warning"><i class="fa fa-angle-left"></i> Continue Shopping</div>{{/link-to}}</td>
							<td colspan="2" ></td>
							<td class="hidden-xs text-center"><strong>Total ${{totalCostShoppingCart}}</strong></td>
							<td><a href="#" class="btn btn-success btn-block">Checkout <i class="fa fa-angle-right"></i></a></td>
						</tr>
					</tfoot>
				</table>
</div>
